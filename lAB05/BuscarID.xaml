<Window x:Class="lAB05.BuscarID"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lAB05"
        mc:Ignorable="d"
        Title="BuscarID" Height="400" Width="700">
    <Grid>
        <StackPanel Height="300" Width="650" Background="Aquamarine" Margin="50" HorizontalAlignment="Center">
            <StackPanel Margin="50">
                <Label HorizontalAlignment="Center" FontSize="30" FontFamily="Consolas" FontStyle="Oblique" Foreground="White" FontWeight="Bold">Ingresar ID Cliente</Label>
                <Label HorizontalAlignment="Center">ID Cliente:</Label>
                <TextBox x:Name="txtIdCliente" Width="200"/>
                <Button Width="160" Height="30" Margin="5" Background="Aquamarine" FontWeight="Bold" Click="Button_Click">Actualizar</Button>
                <Button Width="160" Height="30" Margin="5" Background="Aquamarine" FontWeight="Bold" Foreground="White" Click="Button_Click_1">Salir</Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
